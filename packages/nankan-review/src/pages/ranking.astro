---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSitesByCategory, sortByRankingScore } from '@keiba-review/shared/lib';

const sites = await getSitesByCategory('nankan');
const rankedSites = sortByRankingScore(sites);

const siteUrl = import.meta.env.SITE_URL || 'https://nankan.keiba-review.jp';

// 構造化データ
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: '南関競馬予想サイトランキング',
  description: '南関競馬予想サイトの総合ランキング。実際の利用者の口コミ評価に基づいた信頼性の高いランキングです。',
  itemListElement: rankedSites.slice(0, 10).map((site, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    item: {
      '@type': 'Product',
      name: site.name,
      description: site.description,
      url: `${siteUrl}/sites/${site.slug}/`,
      aggregateRating: site.average_rating && site.review_count > 0 ? {
        '@type': 'AggregateRating',
        ratingValue: site.average_rating,
        reviewCount: site.review_count,
        bestRating: 5,
        worstRating: 1
      } : undefined
    }
  }))
};
---

<BaseLayout
  title="南関競馬予想サイトランキング | 南関競馬予想サイト口コミ"
  description="南関競馬予想サイトの総合ランキング。大井・川崎・船橋・浦和の予想に強いサイトを、実際の利用者の口コミ評価に基づいてランキング形式で紹介します。"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="bg-gradient-to-br from-blue-600 to-sky-600 text-white rounded-2xl p-8 md:p-12 mb-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-3xl md:text-4xl font-bold mb-4">
          南関競馬予想サイトランキング
        </h1>
        <p class="text-blue-100 leading-relaxed">
          実際の利用者の口コミ評価に基づいた信頼性の高いランキング。<br />
          大井・川崎・船橋・浦和の南関4場に特化した予想サイトをご紹介します。
        </p>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-4 mb-8">
      <div class="bg-white rounded-xl p-6 shadow-lg text-center border border-slate-100">
        <div class="text-3xl font-bold text-blue-600 mb-1">{sites.length}</div>
        <div class="text-sm text-slate-600">登録サイト</div>
      </div>
      <div class="bg-white rounded-xl p-6 shadow-lg text-center border border-slate-100">
        <div class="text-3xl font-bold text-blue-600 mb-1">
          {sites.reduce((sum, site) => sum + (site.review_count || 0), 0)}
        </div>
        <div class="text-sm text-slate-600">口コミ総数</div>
      </div>
      <div class="bg-white rounded-xl p-6 shadow-lg text-center border border-slate-100">
        <div class="text-3xl font-bold text-blue-600 mb-1">4</div>
        <div class="text-sm text-slate-600">対応競馬場</div>
      </div>
    </div>

    <!-- Ranking -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-slate-900 mb-6">総合ランキング</h2>
      {rankedSites.length > 0 ? (
        <div class="space-y-4">
          {rankedSites.map((site, index) => (
            <a
              href={`/sites/${site.slug}/`}
              class="block bg-white rounded-xl shadow-lg hover:shadow-xl transition-all p-6 border border-slate-100 hover:border-blue-200 group"
            >
              <div class="flex items-center gap-6">
                <!-- ランク番号 -->
                <div class={`
                  flex-shrink-0 w-14 h-14 md:w-16 md:h-16 rounded-xl flex items-center justify-center text-2xl md:text-3xl font-bold
                  ${index === 0 ? 'bg-gradient-to-br from-yellow-400 to-yellow-600 text-white shadow-lg' :
                    index === 1 ? 'bg-gradient-to-br from-gray-300 to-gray-500 text-white shadow-lg' :
                    index === 2 ? 'bg-gradient-to-br from-orange-400 to-orange-600 text-white shadow-lg' :
                    'bg-gray-100 text-gray-600 group-hover:bg-blue-100 group-hover:text-blue-600'}
                `}>
                  {index + 1}
                </div>

                <!-- サイト情報 -->
                <div class="flex-1 min-w-0">
                  <h3 class="text-xl font-bold mb-2 text-slate-900 group-hover:text-blue-600 transition-colors">
                    {site.name}
                  </h3>
                  <p class="text-sm text-slate-600 mb-3 line-clamp-2">
                    {site.description}
                  </p>
                  <div class="flex flex-wrap items-center gap-4 text-sm">
                    <span class="flex items-center gap-1 text-yellow-600 font-medium">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                      {site.average_rating?.toFixed(1) || 'N/A'}
                    </span>
                    <span class="text-slate-500">
                      {site.review_count}件の口コミ
                    </span>
                    {index < 3 && (
                      <span class="px-3 py-1 bg-red-100 text-red-700 font-bold text-xs rounded-full">
                        人気
                      </span>
                    )}
                  </div>
                </div>

                <!-- 矢印 -->
                <svg class="w-6 h-6 text-slate-400 group-hover:text-blue-600 group-hover:translate-x-1 transition-all flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-12 bg-white rounded-2xl border border-slate-200">
          <p class="text-slate-600">現在、南関競馬予想サイトを準備中です</p>
        </div>
      )}
    </section>

    <!-- 南関4場ガイド -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-slate-900 mb-6">南関4場のガイド</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/venues/ooi/" class="bg-gradient-to-br from-white to-blue-50 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all border border-blue-100 group">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center text-white text-xl font-bold">
              大
            </div>
            <h3 class="text-lg font-bold text-slate-900 group-hover:text-blue-600 transition-colors">大井競馬場</h3>
          </div>
          <p class="text-sm text-slate-600 mb-3">TCK・南関の中心</p>
          <span class="text-sm text-blue-600 font-medium flex items-center gap-1">
            詳しく見る
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </a>

        <a href="/venues/kawasaki/" class="bg-gradient-to-br from-white to-sky-50 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all border border-sky-100 group">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-sky-500 to-sky-600 rounded-lg flex items-center justify-center text-white text-xl font-bold">
              川
            </div>
            <h3 class="text-lg font-bold text-slate-900 group-hover:text-sky-600 transition-colors">川崎競馬場</h3>
          </div>
          <p class="text-sm text-slate-600 mb-3">ナイター競馬の先駆け</p>
          <span class="text-sm text-sky-600 font-medium flex items-center gap-1">
            詳しく見る
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </a>

        <a href="/venues/funabashi/" class="bg-gradient-to-br from-white to-blue-50 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all border border-blue-100 group">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-blue-700 rounded-lg flex items-center justify-center text-white text-xl font-bold">
              船
            </div>
            <h3 class="text-lg font-bold text-slate-900 group-hover:text-blue-600 transition-colors">船橋競馬場</h3>
          </div>
          <p class="text-sm text-slate-600 mb-3">歴史ある競馬場</p>
          <span class="text-sm text-blue-600 font-medium flex items-center gap-1">
            詳しく見る
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </a>

        <a href="/venues/urawa/" class="bg-gradient-to-br from-white to-sky-50 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all border border-sky-100 group">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-sky-600 to-sky-700 rounded-lg flex items-center justify-center text-white text-xl font-bold">
              浦
            </div>
            <h3 class="text-lg font-bold text-slate-900 group-hover:text-sky-600 transition-colors">浦和競馬場</h3>
          </div>
          <p class="text-sm text-slate-600 mb-3">地元密着型</p>
          <span class="text-sm text-sky-600 font-medium flex items-center gap-1">
            詳しく見る
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </a>
      </div>
    </section>

    <!-- CTA -->
    <div class="bg-gradient-to-br from-blue-700 to-sky-700 text-white rounded-2xl p-8 md:p-12 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">南関競馬のデータ分析なら</h2>
      <p class="text-blue-100 mb-6 max-w-2xl mx-auto">
        南関アナリティクスでは、南関4場の詳細なデータ分析、コース別成績、騎手データなどを提供しています。
      </p>
      <a
        href="https://nankan-analytics.com"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-white text-blue-700 hover:bg-blue-50 px-8 py-4 rounded-xl font-bold text-lg transition-all shadow-xl hover:scale-105"
      >
        南関アナリティクスで分析する
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </a>
    </div>
  </div>
</BaseLayout>
