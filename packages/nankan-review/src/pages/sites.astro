---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSitesByCategory, sortByRankingScore } from '@keiba-review/shared/lib';

// 南関競馬サイトのみ取得
const allSites = await getSitesByCategory('nankan');
const sites = sortByRankingScore(allSites);
---

<BaseLayout
  title="サイト一覧"
  description="南関競馬（大井・川崎・船橋・浦和）の予想サイト一覧。実際の利用者による口コミ・評価を掲載。"
>
  <!-- Header Section -->
  <section class="bg-gradient-to-br from-slate-50 to-blue-50/30 py-12 md:py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-4 md:mb-6">
          南関競馬 予想サイト一覧
        </h1>
        <p class="text-base md:text-lg text-slate-600 leading-relaxed mb-6 md:mb-8">
          大井・川崎・船橋・浦和の南関4場に対応した予想サイトを掲載。<br class="hidden sm:block" />
          実際の利用者による口コミを参考に、自分に合ったサイトを見つけましょう。
        </p>

        <!-- Stats -->
        <div class="flex flex-wrap justify-center gap-4">
          <div class="bg-white rounded-xl px-6 py-3 shadow-lg border border-slate-200">
            <span class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-blue-600 to-sky-600 bg-clip-text text-transparent">{sites.length}</span>
            <span class="text-sm text-slate-600 ml-2">登録サイト</span>
          </div>
          <div class="bg-white rounded-xl px-6 py-3 shadow-lg border border-slate-200">
            <span class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-blue-600 to-sky-600 bg-clip-text text-transparent">4</span>
            <span class="text-sm text-slate-600 ml-2">対応競馬場</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sites Grid Section -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      {sites.length === 0 ? (
        <!-- Empty State -->
        <div class="text-center py-16 md:py-20 bg-gradient-to-br from-slate-50 to-blue-50/30 rounded-2xl border border-slate-200">
          <div class="max-w-md mx-auto">
            <div class="text-6xl md:text-7xl mb-6">🏇</div>
            <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-4">
              まだサイトが登録されていません
            </h2>
            <p class="text-base md:text-lg text-slate-600 mb-8">
              南関競馬対応の予想サイトを順次追加していきます。<br />
              近日公開予定です。お楽しみに！
            </p>
            <a
              href="/"
              class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-500 to-sky-500 hover:from-blue-600 hover:to-sky-600 text-white px-8 py-4 rounded-xl font-bold transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105"
            >
              トップページに戻る
            </a>
          </div>
        </div>
      ) : (
        <!-- Sites Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sites.map((site, index) => (
            <a
              href={`/sites/${site.slug}/`}
              class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-slate-200 hover:border-blue-300 overflow-hidden hover:-translate-y-1"
            >
              <div class="p-6 relative">
                <!-- Rank Badge -->
                <div class="absolute top-4 right-4">
                  <div class={`
                    w-12 h-12 rounded-xl flex items-center justify-center text-xl font-bold shadow-lg
                    ${index === 0 ? 'bg-gradient-to-br from-yellow-400 to-yellow-600 text-white' :
                      index === 1 ? 'bg-gradient-to-br from-gray-300 to-gray-500 text-white' :
                      index === 2 ? 'bg-gradient-to-br from-orange-400 to-orange-600 text-white' :
                      'bg-slate-100 text-slate-600 group-hover:bg-blue-100 group-hover:text-blue-600 transition-colors'}
                  `}>
                    {index + 1}
                  </div>
                </div>

                <!-- Site Name -->
                <h2 class="text-xl font-bold text-slate-900 group-hover:text-blue-600 transition-colors mb-3 pr-16 line-clamp-2">
                  {site.name}
                </h2>

                <!-- Description -->
                <p class="text-sm text-slate-600 mb-4 line-clamp-3 leading-relaxed">
                  {site.description}
                </p>

                <!-- Meta Info -->
                <div class="flex flex-wrap items-center gap-4 text-sm mb-4">
                  <span class="flex items-center gap-1.5 text-yellow-600 font-medium">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    <span class="font-bold">{site.averageRating?.toFixed(1) || 'N/A'}</span>
                  </span>

                  <span class="text-slate-500 flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                    </svg>
                    {site.reviewCount}件
                  </span>
                </div>

                <!-- Screenshot Badge -->
                {site.screenshotUrl && (
                  <div class="flex items-center gap-2 text-xs text-green-600 bg-green-50 px-3 py-2 rounded-lg">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span>スクリーンショット確認済み</span>
                  </div>
                )}

                <!-- Hover Arrow -->
                <div class="absolute bottom-6 right-6 opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all duration-300">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section - nankan-analytics -->
  <section class="py-12 md:py-20 bg-gradient-to-br from-blue-700 via-blue-800 to-sky-800 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-64 h-64 md:w-96 md:h-96 bg-white rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-64 h-64 md:w-96 md:h-96 bg-sky-300 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-4xl mx-auto px-4 relative z-10">
      <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl md:rounded-3xl p-8 md:p-12">
        <div class="text-center">
          <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm rounded-full px-4 py-2 text-sm font-medium text-white mb-6">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"></path>
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"></path>
            </svg>
            データ分析プラットフォーム
          </div>

          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4 md:mb-6">
            もっと詳しいデータ分析なら
          </h2>

          <p class="text-base md:text-lg text-blue-100 mb-8 md:mb-10 leading-relaxed max-w-2xl mx-auto">
            南関競馬の詳細なデータ分析、コース傾向、馬場状態の影響など、<br class="hidden sm:block" />
            より深い情報をお求めの方には<strong class="text-white">「南関アナリティクス」</strong>がおすすめです。
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="https://nankan-analytics.com"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 bg-white text-blue-700 hover:bg-blue-50 px-8 py-4 rounded-xl font-bold transition-all duration-300 shadow-2xl hover:shadow-white/25 hover:scale-105"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              南関アナリティクスを見る
            </a>
          </div>

          <!-- Features -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-10 md:mt-12 pt-8 md:pt-10 border-t border-white/20">
            <div class="text-center">
              <div class="text-4xl mb-3">📊</div>
              <div class="text-sm font-medium text-white mb-1">詳細データ分析</div>
              <div class="text-xs text-blue-200">過去レース統計</div>
            </div>
            <div class="text-center">
              <div class="text-4xl mb-3">🏁</div>
              <div class="text-sm font-medium text-white mb-1">コース傾向</div>
              <div class="text-xs text-blue-200">場別の特性分析</div>
            </div>
            <div class="text-center">
              <div class="text-4xl mb-3">🌦️</div>
              <div class="text-sm font-medium text-white mb-1">馬場状態</div>
              <div class="text-xs text-blue-200">天候・馬場の影響分析</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
